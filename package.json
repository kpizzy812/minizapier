{
  "name": "minizapier",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.28.0",
  "engines": {
    "node": ">=22.12.0"
  },
  "scripts": {
    "start": "node apps/api/dist/main",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:generate": "pnpm --filter @minizapier/api db:generate",
    "db:migrate": "pnpm --filter @minizapier/api db:migrate",
    "db:push": "pnpm --filter @minizapier/api db:push",
    "db:studio": "pnpm --filter @minizapier/api db:studio"
  },
  "devDependencies": {
    "turbo": "^2.5.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "prisma",
      "@prisma/engines",
      "@prisma/client",
      "esbuild",
      "@nestjs/core",
      "sharp",
      "msgpackr-extract"
    ]
  }
}
