# Nginx configuration for minizapier.syntratrade.xyz

# Upstream for NestJS API (port 8005 -> internal 3001)
upstream minizapier_api {
    server 127.0.0.1:8005;
    keepalive 64;
}

# Upstream for Next.js frontend (port 3005 -> internal 3000)
upstream minizapier_frontend {
    server 127.0.0.1:3005;
    keepalive 64;
}

# HTTPS server
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name minizapier.syntratrade.xyz;

    # SSL certificates (will be created by certbot)
    ssl_certificate /etc/letsencrypt/live/minizapier.syntratrade.xyz/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/minizapier.syntratrade.xyz/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;

    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_min_length 1000;
    gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript;

    # API routes -> NestJS backend
    location /api/ {
        proxy_pass http://minizapier_api/api/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;

        # Timeout settings
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 120s;

        # For webhook raw body
        client_max_body_size 10M;
    }

    # Health check endpoint
    location /health {
        proxy_pass http://minizapier_api/api;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        access_log off;
    }

    # Next.js static files
    location /_next/static/ {
        proxy_pass http://minizapier_frontend;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
        expires 1y;
        add_header Cache-Control "public, immutable";
    }

    # Everything else -> Next.js frontend
    location / {
        proxy_pass http://minizapier_frontend;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;

        proxy_connect_timeout 30s;
        proxy_send_timeout 30s;
        proxy_read_timeout 30s;
    }

    client_max_body_size 10M;

    access_log /var/log/nginx/minizapier.syntratrade.xyz.access.log;
    error_log /var/log/nginx/minizapier.syntratrade.xyz.error.log;
}

# HTTP -> HTTPS redirect
server {
    listen 80;
    listen [::]:80;
    server_name minizapier.syntratrade.xyz;

    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    location / {
        return 301 https://$server_name$request_uri;
    }
}
